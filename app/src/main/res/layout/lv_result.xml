<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/cus_edittext"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/resultName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#2FD1C5"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="@dimen/_16sdp"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultName"
        app:layout_constraintEnd_toStartOf="@id/result2"/>

    <TextView
        android:id="@+id/result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:textColor="#FF0000"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintStart_toEndOf="@id/result1"
        app:layout_constraintTop_toBottomOf="@id/resultName"/>
</androidx.constraintlayout.widget.ConstraintLayout>